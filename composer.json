{
    "name": "projek-xyz/template",
    "description": "Project Template",
    "keywords": ["project", "template"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fery Wardiyanto",
            "email": "ferywardiyanto@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/projek-xyz/template/issues",
        "source": "https://github.com/projek-xyz/template"
    },
    "scripts": {
        "spec": [
            "@lint",
            "@test"
        ],
        "test": "kahlan --config=test/config.php",
        "lint": "phpcs --standard=PSR12 -n -p src"
    },
    "autoload": {
        "psr-4": {
            "Projek\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stubs\\": "test/stub"
        }
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "kahlan/kahlan": "^4.7",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "extra": {
        "hooks": {
            "pre-commit": "composer spec",
            "commit-msg": "commitlint -e -V",
            "pre-push": "composer spec"
        }
    },
    "config": {
      "preferred-install": "dist",
      "sort-packages": true,
      "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
