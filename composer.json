{
    "name": "projek-xyz/template",
    "description": "Project Template",
    "keywords": ["project", "template"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fery Wardiyanto",
            "email": "ferywardiyanto@gmail.com"
        }
    ],
    "support": {
        "source": "https://github.com/projek-xyz/php-lib-template"
    },
    "funding": [
        {
            "type": "ko-fi",
            "url": "https://ko-fi.com/feryardiant"
        }
    ],
    "scripts": {
        "spec": "kahlan --config=tests/config.php",
        "lint": "phpcs --standard=PSR12 -n -p src",
        "test": [
            "@lint",
            "@spec"
        ]
    },
    "autoload": {
        "psr-4": {
            "Projek\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stubs\\": "tests/stubs"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "kahlan/kahlan": "^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
